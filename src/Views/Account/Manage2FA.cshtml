@model Manage2FAViewModel
@{
    ViewData["Title"] = "Manage Two-Factor Authentication";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Two-Factor Authentication</h2>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (Model.Is2FAEnabled)
                {
                    <div class="alert alert-success mb-4" role="alert">
                        <strong>Two-Factor Authentication is enabled</strong>
                        <p class="mb-0">Your account is protected with two-factor authentication.</p>
                    </div>

                    <div class="list-group mb-4">
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Status</h5>
                                <span class="badge bg-success">Enabled</span>
                            </div>
                            @if (Model.EnabledAt.HasValue)
                            {
                                <small class="text-muted">Enabled on @Model.EnabledAt.Value.ToString("MMMM dd, yyyy")</small>
                            }
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Recovery Codes</h5>
                                <span class="badge bg-primary">@Model.RemainingRecoveryCodes remaining</span>
                            </div>
                            <small class="text-muted">Use recovery codes if you lose access to your authenticator app</small>
                        </div>
                    </div>

                    <form method="post" asp-action="RegenerateRecoveryCodes" class="mb-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning w-100">
                            Regenerate Recovery Codes
                        </button>
                    </form>

                    <form method="post" asp-action="Disable2FA">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to disable two-factor authentication? This will make your account less secure.');">
                            Disable Two-Factor Authentication
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning mb-4" role="alert">
                        <strong>Two-Factor Authentication is not enabled</strong>
                        <p class="mb-0">Enhance your account security by enabling two-factor authentication.</p>
                    </div>

                    <div class="mb-4">
                        <h5>Benefits of 2FA:</h5>
                        <ul>
                            <li>Extra layer of security for your account</li>
                            <li>Protects against password theft</li>
                            <li>Industry standard security practice</li>
                        </ul>
                    </div>

                    <a href="@Url.Action("Setup2FA")" class="btn btn-primary w-100">Enable Two-Factor Authentication</a>
                }

                <hr class="my-3" />
                <a href="/Admin/Dashboard" class="btn btn-secondary w-100">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>
