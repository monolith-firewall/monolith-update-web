@model FirewallUpdateViewModel
@{
    ViewData["Title"] = "Edit Firewall Update";
}

<h1 class="mb-4">Edit Firewall Update</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="FileName" />
                    <input type="hidden" asp-for="FileSize" />
                    <input type="hidden" asp-for="FileHash" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FirewallVersionId" class="form-label"></label>
                        <select asp-for="FirewallVersionId" asp-items="Model.AvailableFirewallVersions" class="form-select"></select>
                        <span asp-validation-for="FirewallVersionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReleaseDate" class="form-label"></label>
                        <input asp-for="ReleaseDate" class="form-control" type="date" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Current File</label>
                        <div class="form-control-plaintext">
                            <strong>@Model.FileName</strong> (@((Model.FileSize / 1024.0 / 1024.0).ToString("F2")) MB)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateFile" class="form-label">Replace File (Optional)</label>
                        <input asp-for="UpdateFile" class="form-control" type="file" />
                        <span asp-validation-for="UpdateFile" class="text-danger"></span>
                        <small class="form-text text-muted">Leave empty to keep the current file</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReleaseNotes" class="form-label"></label>
                        <textarea asp-for="ReleaseNotes" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="ReleaseNotes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MinimumFirewallVersionId" class="form-label"></label>
                        <select asp-for="MinimumFirewallVersionId" asp-items="Model.MinimumFirewallVersions" class="form-select"></select>
                        <span asp-validation-for="MinimumFirewallVersionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsCritical" class="form-check-input" />
                        <label asp-for="IsCritical" class="form-check-label"></label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a href="/Admin/FirewallUpdates" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
