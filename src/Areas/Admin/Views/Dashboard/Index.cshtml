@{
    ViewData["Title"] = "Dashboard";
    var firewallVersionsCount = ViewBag.FirewallVersionsCount;
    var firewallUpdatesCount = ViewBag.FirewallUpdatesCount;
    var packagesCount = ViewBag.PackagesCount;
    var packageUpdatesCount = ViewBag.PackageUpdatesCount;
    var recentFirewallUpdates = ViewBag.RecentFirewallUpdates as List<FirewallUpdate>;
    var recentPackageUpdates = ViewBag.RecentPackageUpdates as List<PackageUpdate>;
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="mb-1" style="font-weight: 700; font-size: 2.5rem;">Dashboard</h1>
        <p class="text-muted">Welcome to the Monolith admin panel</p>
    </div>
</div>

<div class="row mb-5">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="dashboard-stat">@firewallVersionsCount</div>
            <div class="dashboard-label mt-2">Firewall Versions</div>
            <a href="/Admin/FirewallVersions" class="btn btn-sm btn-outline-primary mt-3">View All →</a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="dashboard-stat">@firewallUpdatesCount</div>
            <div class="dashboard-label mt-2">Firewall Updates</div>
            <a href="/Admin/FirewallUpdates" class="btn btn-sm btn-outline-primary mt-3">View All →</a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="dashboard-stat">@packagesCount</div>
            <div class="dashboard-label mt-2">Packages</div>
            <a href="/Admin/Packages" class="btn btn-sm btn-outline-primary mt-3">View All →</a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="dashboard-stat">@packageUpdatesCount</div>
            <div class="dashboard-label mt-2">Package Updates</div>
            <a href="/Admin/PackageUpdates" class="btn btn-sm btn-outline-primary mt-3">View All →</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Recent Firewall Updates</h5>
            </div>
            <div class="card-body">
                @if (recentFirewallUpdates?.Any() == true)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var update in recentFirewallUpdates)
                        {
                            <li class="list-group-item">
                                <strong>@update.FirewallVersion.DisplayName</strong>
                                @if (update.IsCritical)
                                {
                                    <span class="badge bg-danger">Critical</span>
                                }
                                @if (!update.IsActive)
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                                <br />
                                <small class="text-muted">@update.ReleaseDate.ToString("MMM dd, yyyy")</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No firewall updates yet.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Recent Package Updates</h5>
            </div>
            <div class="card-body">
                @if (recentPackageUpdates?.Any() == true)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var update in recentPackageUpdates)
                        {
                            <li class="list-group-item">
                                <strong>@update.Package.PackageName v@update.Version</strong>
                                @if (update.IsCritical)
                                {
                                    <span class="badge bg-danger">Critical</span>
                                }
                                @if (!update.IsActive)
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                                <br />
                                <small class="text-muted">@update.ReleaseDate.ToString("MMM dd, yyyy")</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No package updates yet.</p>
                }
            </div>
        </div>
    </div>
</div>
