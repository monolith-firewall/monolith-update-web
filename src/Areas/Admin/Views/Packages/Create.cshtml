@model PackageViewModel
@{
    ViewData["Title"] = "Create Package";
}

<h1 class="mb-4">Create New Package</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="PackageName" class="form-label"></label>
                        <input asp-for="PackageName" class="form-control" placeholder="e.g., VPN Module" />
                        <span asp-validation-for="PackageName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PackageCode" class="form-label"></label>
                        <input asp-for="PackageCode" class="form-control" placeholder="e.g., MPKG-VPN" />
                        <span asp-validation-for="PackageCode" class="text-danger"></span>
                        <small class="form-text text-muted">Unique identifier for this package</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of this package"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" placeholder="e.g., Network, VPN, Diagnostics" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <small class="form-text text-muted">Used for grouping in the firewall WebUI</small>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create Package</button>
                        <a href="/Admin/Packages" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
